<?xml version="1.0" encoding="UTF-8"?><project basedir="." default="" name="weathervcm">				<property file="${basedir}/local.properties" />    <property name="src.root"                  value="../src/project/src/" />		<property name="lib.path"                  value="../src/project/lib/" />        <property name="temp.classes"              value="${basedir}/temp_b/classes" />    <property name="release.dir"               value="${basedir}/release" />    <property name="release.lib"               value="${release.dir}/lib" />		<property name="release.classes"           value="${release.dir}/classes" />        <property name="lib.fname"                 value="vcm.jar" />         <property name="web.src"               	 value="../src/project/WebContent" />	  	  <property name="vcm.home"               	 value="${webserver.home}/webapps/vcm" />    <property name="vcm.classes"               	 value="${vcm.home}/WEB-INF/classes" />    <property name="vcm.lib"               	 value="${vcm.home}/WEB-INF/lib" />         <target name="cleanup" >  		<delete dir="${temp.classes}"/>  		<!--delete file="${release.lib}/${lib.fname}"/ -->  	</target>  	    <target name="init">      <tstamp>       	<format property="build.time" pattern="MM/dd/yyyy hh:mm aa" locale="en"/>      </tstamp>            <mkdir dir="${temp.classes}" />            <path id="vcm.classpath" >         <fileset dir="${lib.path}">            <include name="*.jar"/>         </fileset>      </path>    </target>        <target name="deploy" depends="build" >			<tstamp>       	<format property="build.time.2" pattern="yyyyMMdd_hhmmss" locale="zh"/>      </tstamp>             <delete dir="${vcm.home}" />  		 <mkdir dir="${vcm.home}" />       <copy todir="${vcm.home}" overwrite="true" >           <fileset dir="${web.src}">             <include name="**"/>           </fileset>       </copy>              <delete dir="${vcm.lib}" />  		 <mkdir dir="${vcm.lib}" />  		 <copy todir="${vcm.lib}" overwrite="true" >           <fileset dir="${lib.path}">             <include name="*.jar"/>           </fileset>       </copy>        <copy file="${release.lib}/${lib.fname}" todir="${vcm.lib}" overwrite="true" />               <delete dir="${vcm.classes}" />  		 <mkdir dir="${vcm.classes}" />       <copy todir="${vcm.classes}" overwrite="true" >           <fileset dir="${release.classes}">             <include name="**"/>           </fileset>       </copy>        			<zip destfile="${release.dir}/vcm_${vcm.impl.version}_${build.time.2}.zip" basedir="${vcm.home}"/>            </target>       	<target name="build" depends="cleanup, init" >       <!-- compile -->       <mkdir dir="${temp.classes}" />       <javac srcdir="${src.root}"           destdir="${temp.classes}"           optimize="${javac.optimize}"           debug="${javac.debug}"           deprecation="${javac.deprecation}" >           <classpath>              <path refid="vcm.classpath" />         	</classpath>         	<compilerarg line="-source 1.5 -target 1.5" />       </javac>			 <copy todir="${temp.classes}" overwrite="true" >           <fileset dir="${src.root}">             <include name="com/**/*.properties"/>           </fileset>      		 <fileset dir="${src.root}">             <include name="com/**/*.xml"/>           </fileset>       </copy>       <!-- jar -->       <delete dir="${release.lib}" />  		 <mkdir dir="${release.lib}" />       <jar jarfile="${release.lib}/${lib.fname}"            basedir="${temp.classes}"           compress="no" >                       <manifest>           		<attribute name="Built-By"               value="${user.name}"/>           		<attribute name="Build-Time" 						 value="${build.time}"/>           		<attribute name="Specification-Title"    value="${vcm.spec.title}"/>           		<attribute name="Specification-Version"  value="${vcm.spec.version}"/>           		<attribute name="Specification-Vendor"   value="${vcm.spec.vendor}"/>           		<attribute name="Implementation-Title"   value="${vcm.impl.title}"/>           		<attribute name="Implementation-Version" value="${vcm.impl.version}"/>           		<attribute name="Implementation-Vendor"  value="${vcm.impl.vendor}"/>                    		<!--           		<section name="${module}">                <attribute name="Sealed" value="false"/>           		</section>           		-->         	</manifest>      </jar>            <delete dir="${release.classes}" />			<copy todir="${release.classes}" overwrite="true" >           <fileset dir="${src.root}">             <include name="*.properties"/>           </fileset>      		 <fileset dir="${src.root}">             <include name="*.xml"/>           </fileset>      </copy>						<!--      <copy file="${release.lib}/${lib.fname}"      		todir="${vcm.appserver}/webapps/vcm/WEB-INF/lib2" overwrite="true" />      -->    </target>    	</project>